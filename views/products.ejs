<%- include("includes/header" )%>
<title>Products</title>
<link rel="stylesheet" href='/styles/product.css'>

</head>
<body>
    <%- include('includes/navigation') %>
      <h4><%-productTitle%></h4>
    <div class="container-fluid">
        <div class='row'>
          <% if(succmsg){%>
            <div class="alert alert-success" id="alert" role="alert">
                <%=succmsg%>
            </div>
          <%}%>
          <% if(products.length==0){ %>
            <h3>Product Not Found</h3>
          <% } %>
          <% for(let i=0;i<products.length ;i++){%>
          <div class="card col-3" style="width: 18rem;">
          <img class="card-img-top" src="<%= products[i].img%>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= products[i].title %></h5>
            <h6>Price:$<%= products[i].price %></h6>
            <p class="card-text description"><%= products[i].description %></p>
          </div>
          <div class="card-body ">
            <a  href="/item/<%= products[i]._id %>" class="btn btn-info">Details</a>
            <form class="details" method="POST" action='/cart'>
              <input type="hidden" name="productId" value="<%=products[i]._id%>">
            <button type="submit"  class="btn btn-warning">Add to cart</button>
            </form>
          </div>
        </div>
          <% }%>
        </div>
        </div>

<%- include("includes/footer" )%>