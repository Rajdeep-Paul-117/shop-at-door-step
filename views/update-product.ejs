<%- include("includes/header" )%>
<title>Products</title>
<link rel="stylesheet" href='../styles/add-product.css'>
</head>
<body>
    <%- include('includes/navigation') %>
    <div class="container-fluid f">
    <form method="POST" action="/update-product/<%=product._id%>" class="ff">
        <label>Product Name</label>
        <input type="text" name="title" class="form-control" value="<%= product.title%>">

        <label>Product Price</label>
        <input type="number" step="0.01" min="0" name="price" class="form-control" value="<%= product.price %>">

        <label>Product Image</label>
        <input type="text" name="img" class="form-control" value="<%=product.img%>">

        <label>Product Description</label>
        <input type="text" name="description" class="form-control" value="<%=product.description%>">
        <button type="submit" class="btn btn-primary submit">Submit</button>
    </form>
    </div>



<%- include("includes/footer" )%>